<Window x:Class="MVVMPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMPractice.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Employee Editor - Pure MVVM Demo" Height="400" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:EmployeeFormView HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <local:EmployeeListView HorizontalAlignment="Center" Grid.Column="1"/>
    </Grid>
</Window>
